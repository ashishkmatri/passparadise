# =============================================================
# Copy this file to terraform.tfvars and fill in your values
# =============================================================

# AWS Region (Mumbai)
aws_region = "ap-south-1"

# Instance type (t3.medium = 4GB RAM)
instance_type = "t3.medium"

# Storage size in GB
storage_size = 30

# Your SSH public key (paste your key here)
# Get it by running: cat ~/.ssh/id_ed25519.pub
ssh_public_key = "ssh-ed25519 AAAA... your-email@example.com"

# Leave empty for fresh install
# Fill with AMI ID when restoring from backup
restore_from_ami = ""
